<div class="page-header">
  <h1>Listar comments</h1>
</div>

<div class="panel panel-default">
 <div class="panel-heading">
    <h3 class="panel-title">comments</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover" width="100%">
      <thead>
        <tr>
                      <th>commenter</th>
                      <th>body</th>
                      <th>article</th>
                    <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @comments) do |comment| %>
                      <td><%= comment.commenter %></td>
                      <td><%= comment.body %></td>
                      <td><%= comment.article %></td>
                    <td>
            <%= link_to 'Detalhes', comment %>
          </td>
          <td>
            <%= link_to 'Editar', edit_comment_path(comment) %>
          </td>
          <td>
            <%= link_to 'Deletar', comment, method: :delete, data: { confirm: 'Tem certeza?'} %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="form-actions">
  <%= link_to 'Incluir Comment', new_comment_path, class: 'btn btn-primary' %>
</div>