<div class="container">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Comment</h3>
			</div>
			<br>
			<div class="panel-body">
				<%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
				  	<%= f.error_notification %>
				  	<div class="form-inputs">
					  		<div class="form-group">
				  				<div class="col-xs-2">
					    			<%= f.input :commenter %>
					    		</div>
			  				</div>
					  		<div class="form-group">
				  				<div class="col-xs-2">
					    			<%= f.input :body %>
					    		</div>
			  				</div>
					  		<div class="form-group">
				  				<div class="col-xs-2">
					    			<%= f.association :article %>
					    		</div>
			  				</div>
				  	</div>
		  	</div>
		  	<div class="form-group well" style="margin-bottom: 0px; border: 0px; border-radius: 0px;">
				<%= f.submit 'Incluir', class: "btn btn-primary" %>
				<%= link_to "Voltar", comments_path, class: "btn btn-default" %>
			</div>
			<% end %>
		</div>
	</div>
</div>