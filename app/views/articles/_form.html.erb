<%= simple_form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
    <div class="form-group">
      <div class="col-xs-3">
        <%= f.input :author %><br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :title %><br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-5">
        <%= f.input :text, input_html: {rows: "10"}   %><br>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', articles_path, class: "btn btn-default" %>
    </div>
<% end %>