<div class="page-header">
  <h1>Listar articles</h1>
</div>

<div class="panel panel-default">
 <div class="panel-heading">
    <h3 class="panel-title">articles</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover" width="100%">
      <thead>
        <tr>
                      <th>title</th>
                      <th>content</th>
                    <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @articles) do |article| %>
                      <td><%= article.title %></td>
                      <td><%= article.content %></td>
                    <td>
            <%= link_to 'Detalhes', article %>
          </td>
          <td>
            <%= link_to 'Editar', edit_article_path(article) %>
          </td>
          <td>
            <%= link_to 'Deletar', article, method: :delete, data: { confirm: 'Tem certeza?'} %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="form-actions">
  <%= link_to 'Incluir Article', new_article_path, class: 'btn btn-primary' %>
</div>